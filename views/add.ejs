<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

  </head>
  <body>
    <%- include("partials/navigation")  %> 


    <div class="container p-5">
      <form method="POST" target="/add" class="card card-body">
  
        <div class="form-group">
          <label for="title">Titulo</label>
          <input class ="form-control" id = "titulo" name= "titulo" type="text" placeholder="Titulo..." autofocus>
        </div>
        
        <div class="form-group">
          <label for="image">Url</label>
          <input type="url" name="imagen" class="form-control" placeholder="url..." required>
        </div>

        <div class="form-group">
          <label for="image">Fecha</label>
          <input type="date" name="date" class="form-control" placeholder="url..." required>
        </div>
  
        <div class="form-group">
          <label for="description">Description</label>
          <textarea placeholder="..." class="form-control" name="desc" rows="2" required>
          </textarea>
        </div>
  
        <div class="form-group d-grid gap-2">
          <input onclick="añadir()" type="submit" value="Añadir" class="btn btn-success">
        </div>
      </form>
  
    </div>
  


  </body>
</html>
