<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <body>
    <%- include("partials/navigation")  %> 
    <div class="p-5">
      <div class="row">
  
      <%if (fotos.length > 0) {%>
      <% fotos.forEach(function(foto) { %>
      <div class="col-md-2">
        <div id="color" class="card">
          <div  id="color" class="card-header text-white">
            <h3>Titulo: <%= foto.titulo %></h3>
          </div>
          <img class="card-img-top" src="<%= foto.imagen %>">
          <div  id="color" class="card card-body text-white">
            <h3>Descripcion: <%= foto.desc %></h3>
          </div>
          <div id="color" class="card card-body text-white">
            <h3>Fecha: <%= foto.date %></h3>
          </div>
          <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-danger p-2">Eliminar</button>
            <button type="button" class="btn btn-info">Editar</button>
          </div>
        </div>
      </div>
      <%})%>
      <%} else {%>
      <div class="card card-body text-center">
        <p>No has añadido ninguna foto. <a href="/add">añade una</a></p>
      </div>
      <%}%>
      </div>
    </div>
  </body>
</html>
